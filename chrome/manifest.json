{
	"manifest_version": 2,
	"name": "Nepi Jano!",
	"version": "1.2.2",
	"description": "Read paid content on www.sme.sk",
	"author": "Miroslav Magda, Viliam Pucik",
	"permissions": ["webRequest", "webRequestBlocking", "*://*.sme.sk/c/*"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"js": ["nepijano.js"],
			"matches": ["*://*.sme.sk/c/*"]
		},
		{
			"js": ["video.js"],
			"matches": ["http://tv.sme.sk/v*"]
		},
		{
			"js": ["xml.js"],
			"matches": ["http://s.sme.sk/export/ma/?ch=*"]
		}
	],
	"homepage_url": "https://github.com/viliampucik/nepi-jano",
	"icons": {
		"16": "icon_16.png",
		"48": "icon_48.png",
		"128": "icon_128.png"
	}
}
